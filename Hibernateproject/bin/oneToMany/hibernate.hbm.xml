<?xml version="1.0" ?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//En"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
	
	<hibernate-mapping>
		
	<class name ="oneToMany.Department" table="Department">
	
	<id name ="id" column = "id">
	
		<generator class="increment"></generator>
	</id>
	
	<property name ="Dname" column = "d_name" length ="15"></property>
	<set name ="employeeSet" table ="Employee" inverse="false" lazy ="false">
		<key><column name ="dept_id"></column></key>
		<one-to-many class="oneToMany.Employee" />
	</set>
	
	
		</class>
	</hibernate-mapping>